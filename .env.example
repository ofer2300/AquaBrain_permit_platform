# Environment
NODE_ENV=development
ENVIRONMENT=development

# Application Ports
FRONTEND_PORT=3000
BACKEND_PORT=5000
AI_SERVICE_PORT=8000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=building_permit
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/building_permit

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis
REDIS_URL=redis://:redis@localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# API URLs
VITE_API_URL=http://localhost:5000
VITE_AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_URL=http://localhost:8000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=pdf,png,jpg,jpeg,docx,xlsx

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@buildingpermit.com

# AI Service Configuration
AI_MODEL_PATH=./models
AI_CACHE_DIR=./cache
TESSERACT_PATH=/usr/bin/tesseract
POPPLER_PATH=/usr/bin

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_MAX_AGE=86400000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security
BCRYPT_ROUNDS=10
PASSWORD_MIN_LENGTH=8

# External APIs (if any)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# STRIPE_SECRET_KEY=your-stripe-secret-key
# STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Municipality Configuration
DEFAULT_MUNICIPALITY=TelAviv
SUPPORTED_MUNICIPALITIES=TelAviv,Jerusalem,Haifa,Rishon,Netanya

# Compliance Rules Version
RULES_VERSION=2024.1
AUTO_UPDATE_RULES=false

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_DOCUMENT_VERSIONING=true
ENABLE_BATCH_PROCESSING=false

# Performance
DB_POOL_MIN=2
DB_POOL_MAX=10
REDIS_POOL_SIZE=10
REQUEST_TIMEOUT=30000

# Development
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true

# Production (set these in production)
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-new-relic-key
# SSL_CERT_PATH=/etc/ssl/certs/cert.pem
# SSL_KEY_PATH=/etc/ssl/private/key.pem
